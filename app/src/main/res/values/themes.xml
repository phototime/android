<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Phototime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:navigationBarColor">#FF090620</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Phototime.SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo_wrapper</item>
        <item name="postSplashScreenTheme">@style/Theme.Phototime</item>
    </style>

    <style name="Theme.Phototime.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Phototime.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Phototime.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>